<div class="col-md-8 offset-md-2">
<h1 class="h1">New Game</h1>

<% @letters.each do |letter| %>
<ul class="btn btn-primary m-1 mt" style="display: inline">
<li style="display: inline"><%= letter %></li>
</ul>
<% end %>

  <form class="mt-4" action="score" method="GET" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters_array, @letters %>
    <div class="form-outline mb-4">
      <label class="form-label" for="text">What is the longest word you can find?</label>
      <input class="form-control" type="text" name="word">
    </div>
    <input class="btn btn-danger btn-block" type="submit" value="Play">
  </form>
</div>
